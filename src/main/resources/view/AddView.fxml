<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="addView" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TaskController">
   <children>
      <Label layoutX="88.0" layoutY="82.0" text="Hour:">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Label layoutX="34.0" layoutY="122.0" text="Description:">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <Label layoutX="58.0" layoutY="289.0" text="Location:">
         <font>
            <Font name="System Italic" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="hourField" layoutX="146.0" layoutY="82.0" promptText="example (11:13)" />
      <Label layoutX="168.0" layoutY="21.0" text="Add new task" textFill="#fc0000">
         <font>
            <Font name="System Italic" size="34.0" />
         </font>
      </Label>
      <TextArea fx:id="descriptionField" layoutX="146.0" layoutY="122.0" prefHeight="154.0" prefWidth="278.0" />
      <TextField fx:id="locationField" layoutX="146.0" layoutY="288.0" />
      <Button fx:id="addButton" layoutX="88.0" layoutY="342.0" mnemonicParsing="false" onAction="#addTask" prefHeight="50.0" prefWidth="102.0" text="Add">
         <font>
            <Font name="System Italic" size="15.0" />
         </font>
      </Button>
      <Button fx:id="cancelAdd" cancelButton="true" defaultButton="true" layoutX="333.0" layoutY="342.0" mnemonicParsing="false" onAction="#cancelAdding" prefHeight="50.0" prefWidth="102.0" text="Cancel">
         <font>
            <Font name="System Italic" size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
